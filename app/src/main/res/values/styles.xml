<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditBodyStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/body_text_bg</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="EditButtonStyle" parent="DetailsButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/save_text</item>
        <item name="android:background">@drawable/btn_edit_body</item>
    </style>

    <style name="RemoveButtonStyle" parent="DetailsButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/remove_btn_text</item>
        <item name="android:background">@drawable/btn_remove_bg</item>
    </style>

    <style name="CancelButtonStyle" parent="DetailsButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/cancel_btn_text</item>
        <item name="android:background">@drawable/btn_cancel_bg</item>
    </style>


    <style name="DetailsButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">20dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">20dp</item>
        <item name="android:layout_marginTop" tools:ignore="NewApi">20dp</item>
    </style>

</resources>